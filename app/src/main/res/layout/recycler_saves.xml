<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="115dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="8dp"
    android:padding="8dp"
    android:background="@drawable/back_fundo_orange"
    android:id="@+id/box_employee">

    <TextView
        android:id="@+id/tv_recycler_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="De:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recycler_lang_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        android:text="Português"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_from"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_translate_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="Exemplo de texto"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recycler_from" />

    <TextView
        android:id="@+id/tv_recycler_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginTop="4dp"
        android:text="Para:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_translate_from" />

    <TextView
        android:id="@+id/tv_recycler_lang_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:singleLine="true"
        android:text="Inglês"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_recycler_to"
        app:layout_constraintTop_toBottomOf="@+id/tv_translate_from" />

    <TextView
        android:id="@+id/tv_translate_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="Exemplo de texto"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recycler_to" />

</androidx.constraintlayout.widget.ConstraintLayout>
